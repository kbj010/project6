<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="empns">
	<!-- table의 컬렄명과 class 속성명이 다를경우 -->
	<resultMap type="emp" id="empResult">
		        <!-- 클래스의 속성명     테이블의 컬럼명 -->
		<result property="empno" column="empno"/>
		<result property="ename" column="ename"/>
		<result property="job" column="job"/>
		<result property="mgr" column="mgr"/>
		<result property="hiredate" column="hiredate"/>
		<result property="sal" column="sal"/>
		<result property="comm" column="comm"/>
				<result property="deptno" column="deptno"/>
		<!-- 관리자명 -->
		<result property="mgrName" column="mgrName"/>
		<!-- 조인용 -->
		<result property="dname" column="dname"/>
		<result property="loc" column="loc"/>
		<!-- 조인용 부서정보 전체 -->
		<collection property="dept" resultMap="deptResult"></collection>
	</resultMap>
	<resultMap type="dept" id="deptResult">
			   <!-- 클래스의 속성명     테이블의 컬럼명 -->
		<result property="deptno" column="deptno"/>
		<result property="dname" column="dname"/>
		<result property="loc" column="loc"/>
	</resultMap>
	<select id="empList" parameterType="integer" resultMap="empResult">
		select * from emp where deptno=#{deptno} order by ename
	</select>
	<select id="allEmplist" resultMap="empResult">
		select w.*,m.ename mgrName, dname,loc from dept d,emp w left outer join
		 emp m on w.mgr=m.empno where w.deptno=d.deptno order by w.empno
<!-- 	select w.*,m.ename mgrName, d.* from emp w, emp m, dept d
			where w.mgr=m.empno(+) and w.deptno=d.deptno order by w.empno -->
	</select>
	<select id="select" parameterType="integer" resultType="emp">
		select w.*, ifnull(m.ename,'CEO') mgrName from emp w left outer join
		 emp m on w.mgr=m.empno where w.empno=#{empno} 
<!-- 	select w.*, nvl(m.ename,'내가 사장') mgrName from emp w, emp m 
			where w.empno=#{empno} and w.mgr=m.empno(+) -->
	</select>
	<select id="list" resultMap="empResult">
		select * from emp order by ename
	</select>
	<insert id="insert" parameterType="emp">
		insert into emp values(#{empno},#{ename},#{job},#{mgr},
			#{hiredate},#{sal},#{comm},#{deptno})
	</insert>
	<update id="update" parameterType="emp">
		update emp set ename=#{ename},job=#{job},mgr=#{mgr},hiredate=#{hiredate},
			sal=#{sal},comm=#{comm}, deptno=#{deptno} where empno=#{empno}
	</update>
	<delete id="delete" parameterType="integer">
		delete from emp where empno=#{empno}
	</delete>
</mapper>